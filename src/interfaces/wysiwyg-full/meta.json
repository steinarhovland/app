{
  "name": "$t:wysiwyg_full",
  "version": "1.1.0",
  "types": ["string", "json"],
  "icon": "format_quote",
  "recommended": {
    "length": 65534
  },
  "options": {
    "placeholder": {
      "name": "$t:placeholder",
      "comment": "$t:placeholder_comment",
      "interface": "text-input",
      "length": 200
    },
    "output_format": {
      "name": "$t:output_format",
      "comment": "$t:output_format_comment",
      "interface": "dropdown",
      "default": "html",
      "options": {
        "choices": {
          "html": "$t:output_html",
          "json": "$t:output_json",
          "md": "$t:output_md"
        }
      }
    },
    "medium_editor_style": {
      "name": "$t:medium_editor_style",
      "comment": "$t:medium_editor_style_comment",
      "interface": "toggle",
      "type": "BOOLEAN",
      "default": false
    },
    "table_header": {
      "name": "$t:table_header",
      "comment": "$t:table_header_comment",
      "interface": "toggle",
      "type": "BOOLEAN",
      "default": false
    },
    "raw_default": {
      "name": "$t:raw_default",
      "comment": "$t:raw_default_comment",
      "interface": "toggle",
      "type": "BOOLEAN",
      "default": false
    },
    "extensions": {
      "name": "Extensions",
      "comment": "What options to allow the user to use.",
      "interface": "checkboxes",
      "default": [
        "bold", "italic", "underline", "h1", "h2", "h3", "h4", "blockquote", 
        "bullet_list", "ordered_list", "table", "history"
      ],
      "options": {
        "draggable": true,
        "choices": {
          "paragraph": "Paragraph",
          "h1": "Heading 1",
          "h2": "Heading 2",
          "h3": "Heading 3",
          "h4": "Heading 4",
          "h5": "Heading 5",
          "h6": "Heading 6",
          "bold": "Bold",
          "strike": "Strike",
          "underline": "Underline",
          "italic": "Italic",
          "blockquote": "Blockquote",
          "bullet_list": "Bullet List",
          "ordered_list": "Ordered List",
          "hard_break": "Hard Break",
          "horizontal_rule": "Horizontal Rule",
          "image": "Image",
          "link": "Link",
          "iframe": "Iframe",
          "code": "Code",
          "table": "Table",
          "span": "Span Tag",
          "code_block": "Code Block",
          "history": "History (undo / redo)"
        }
      }
    }
  },
